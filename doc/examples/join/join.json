{
  "pipeline": {
    "name": "join"
  },
  "enable_stats": true,
  "transform": {
    "cmd": [ "/bin/bash" ],
    "image": "pachyderm/join",
    "stdin": [ "./join.rb /pfs/ /pfs/out/" ]
  },
  "input": {
        "cross": [
            {
                "atom":{
                    "repo": "map",
                    "name": "sales",
                    "glob": "/sales/*"
                }
            },
            {
                "atom":{
                    "repo": "map",
                    "name": "authors",
                    "glob": "/authors/*"
                }
            },
            {
                "atom":{
                    "repo": "map",
                    "name": "books",
                    "glob": "/books/*"
                }
            }
        ]
    }
}
