{
  "pipeline": {
    "name": "reduce"
  },
  "enable_stats": true,
  "transform": {
    "cmd": [ "/bin/bash" ],
    "image": "pachyderm/reduce",
    "stdin": [ "./reduce.rb /pfs/shuffle /pfs/out/" ]
  },
  "parallelism_spec": {
    "constant": 2
  },
  "input": {
      "cross": [
          {
              "atom":{
                  "repo": "shuffle",
                  "glob": "/*"
              }
          },
          {
              "atom":{
                  "repo": "data",
                  "glob": "/"
              }
          }
      ]
  }
}
